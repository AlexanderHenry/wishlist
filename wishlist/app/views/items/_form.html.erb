<% # [@list, @item] creating array contains list and item from controller, last thing in array is bound to form %>
<%= form_for( [@list, @item] ) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :max_price %><br>
    <%= f.text_field :max_price %>
  </div>
  <div class="field">
    <%= f.label :model_number %><br>
    <%= f.text_field :model_number %>
  </div>
  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_area :notes, maxlength: 500 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
