<h2><%= @list.name %></h2>

<p>
  <%= @list.description %>
</p>

<%= link_to 'Edit List', edit_list_path(@list) %> | 
<%= link_to "Add Item", new_list_item_path(@list) %>

<hr>

<% @list.items.each do |item| %>

	<h3>
	<%= link_to item.name %>
	<%= link_to "Edit", edit_list_item_path(@list, item) %>
	<%= link_to "Remove", list_item_path(@list, item), method: :delete, confirm: 'Are you sure you want to delete this item?' %>
	</h3>
	
	<p>Maximum amount you should spend: <%= number_to_currency item.max_price %></p>
	
	<% if item.max_price.present? %>
		<p><% item.max_price %></p>
	<% else %>
		<p>Unknown</p>
	<% end %>

	<% item.model_number %>

	<% if item.url.present? %>
		<p><% item.url %></p>
	<% else %>
		<p>No link provided</p>
	<% end %>

	<% item.notes %>

<% # <%= is only needed when printing to the screen. Outside of this allows for ruby comment.  HTML comment people would see in source code. %>
<% end %>