<h2><%= @list.name %></h2>

<%= link_to "Add Item", new_list_item_path(@list) %>

<% @list.items.each do |item| %>

	<h3><%= item.name %> <%= link_to "Remove Item", list_item_path(@list, item), method: :delete, confirm: 'Are you sure you want to delete this item?' %> <%= link_to "Update Item", edit_list_item_path(@list, item) %></h3>
	<p>Maximum amount you should spend: <%= number_to_currency item.max_price %></p>
	
	<% if item.max_price.present? %>
		<p><% item.max_price %></p>
	<% else %>
		<p>Unknown</p>
	<% end %>

	<% item.model_number %>

	<% if item.url.present? %>
		<p><% item.url %></p>
	<% else %>
		<p>No link provided</p>
	<% end %>

	<% item.notes %>

<% # <%= is only needed when printing to the screen. Outside of this allows for ruby comment.  HTML comment people would see in source code. %>
<% end %>